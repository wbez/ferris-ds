{
  "name": "@wbez/ferris-ds",
  "version": "6.0.2",
  "description": "Asset library of SCSS and SVG files",
  "scripts": {
    "build": "node docs/config/tasks/build.js",
    "dev": "node docs/config/tasks/dev.js",
    "test": "npm run build",
    "prettify": "prettier --write \"./**/*.{js,html,json,md}\"",
    "release": "release-it"
  },
  "style": "/assets/dist/css/all.css",
  "sass": "/assets/scss/all.scss",
  "files": [
    "/assets"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/wbez/ferris-ds.git"
  },
  "license": "MIT",
  "author": "CPM Digital Development <webteam@wbez.org>",
  "homepage": "https://github.com/wbez/ferris-ds#readme",
  "devDependencies": {
    "@texastribune/postcss-amp": "^1.4.0",
    "@texastribune/queso-tools": "1.3.0",
    "autoprefixer": "^9.6.1",
    "axios": "^0.21.1",
    "browser-sync": "^2.26.3",
    "clean-css": "^4.2.1",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^5.0.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.13.0",
    "fast-glob": "^3.0.1",
    "fs-extra": "^8.0.1",
    "glob-watcher": "^5.0.3",
    "husky": "^3.0.5",
    "kss": "https://github.com/kss-node/kss-node",
    "lint-staged": "^9.2.5",
    "lodash": "^4.17.20",
    "markdown-it": "^12.3.2",
    "node-html-parser": "^1.1.16",
    "nunjucks": "^3.1.7",
    "ora": "^3.4.0",
    "postcss": "^7.0.18",
    "prettier": "^1.18.2",
    "purgecss": "^1.3.0",
    "purgecss-from-html": "^1.1.0",
    "release-it": "^14.2.2",
    "sass": "^1.26.11",
    "simple-git": "^2.31.0",
    "stylelint": "^11.0.0",
    "stylelint-config-recommended-scss": "^3.3.0",
    "stylelint-scss": "^3.11.0",
    "svgo": "^1.3.0",
    "svgstore": "^3.0.0-2"
  },
  "dependencies": {
    "normalize.css": "^8.0.1"
  },
  "peerDependencies": {
    "sass": "^1.26.11"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,html,json,md}": [
      "prettier --check"
    ],
    "docs/config/**/*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.scss": [
      "stylelint --fix",
      "git add"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "ðŸ”– Release ${version}",
      "requireBranch": "main",
      "requireCleanWorkingDir": true
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true,
      "releaseName": "v${version}",
      "releaseNotes": "node ./scripts/generate-release-notes.js v${latestVersion} v${version}",
      "draft": false
    }
  }
}
