{
  "name": "@wbez/ferris-ds",
  "version": "1.0.0-0",
  "description": "Asset library of SCSS and SVG files",
  "scripts": {
    "build": "node docs/config/tasks/build.js",
    "dev": "node docs/config/tasks/dev.js",
    "test": "yarn run build",
    "prettify": "prettier --write \"./**/*.{js,html,json,md}\"",
    "release": "np --any-branch"
  },
  "style": "/assets/dist/css/all.css",
  "sass": "/assets/scss/all.scss",
  "files": [
    "/assets"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/wbez/ferris-ds.git"
  },
  "license": "MIT",
  "author": "CPM Digital Development <webteam@wbez.org>",
  "bugs": {
    "url": "https://github.com/wbez/ferris-ds/issues"
  },
  "homepage": "https://github.com/wbez/ferris-ds#readme",
  "devDependencies": {
    "@texastribune/queso-tools": "1.3.0",
    "browser-sync": "^2.26.3",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^5.0.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.13.0",
    "fast-glob": "^3.0.1",
    "fs-extra": "^8.0.1",
    "glob-watcher": "^5.0.3",
    "husky": "^3.0.5",
    "kss": "https://github.com/kss-node/kss-node",
    "lint-staged": "^9.2.5",
    "markdown-it": "^8.4.2",
    "node-html-parser": "^1.1.16",
    "np": "^5.0.3",
    "nunjucks": "^3.1.7",
    "ora": "^3.4.0",
    "prettier": "^1.18.2",
    "purgecss": "^1.3.0",
    "purgecss-from-html": "^1.1.0",
    "stylelint": "^11.0.0",
    "stylelint-config-recommended-scss": "^3.3.0",
    "stylelint-scss": "^3.11.0"
  },
  "dependencies": {
    "normalize.css": "^8.0.1",
    "sass-mq": "^5.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,html,json,md}": [
      "prettier --check"
    ],
    "docs/config/**/*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.scss": [
      "stylelint --fix",
      "git add"
    ]
  }
}
