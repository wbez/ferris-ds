{
  "extends": ["airbnb", "prettier"],
  "env": {
    "jest": true,
    "node": true
  },
  "rules": {
    "no-console": "error",
    "no-underscore-dangle": [
      "error",
      {
        "allowAfterThis": true
      }
    ],
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": true
      }
    ]
  }
}
